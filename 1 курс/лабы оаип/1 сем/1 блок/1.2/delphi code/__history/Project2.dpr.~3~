program Project2;

{$APPTYPE CONSOLE}

uses
    System.SysUtils;

var
    Volume,Diameter : real;
    i : byte;

begin
    Diameter := 0.1;
    Volume := 3.14 * Diameter * Diameter * Diameter / 6;
    for i := 2 to 12 do
    begin
        Diameter := Diameter + 0.01;
        Volume := Volume + 3.14 * Diameter * Diameter * Diameter / 6;
    end;
    Volume := 1000 * Volume;
    writeln('The volume of balls is ', Volume:9:5 ,' liters');
    readln;
end.
