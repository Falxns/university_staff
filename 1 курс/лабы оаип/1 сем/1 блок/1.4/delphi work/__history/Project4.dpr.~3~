program Project4;

{$APPTYPE CONSOLE}

uses
  System.SysUtils;

var
    Numbers : array of Integer;
    Sum : Integer;
    i , Length , N : Byte;
    IsCorrect : Boolean;

begin
    IsCorrect := true;
    repeat
        try
            Readln(N);
            if (N < 1) or (N > 255) then
            begin
                IsCorrect := false;
                Writeln('You should use numbers [1..255]');
            end;
        except
            Writeln('Incorrect input.You should use numbers [1..255]');
        end;
    until IsCorrect;
    SetLength(Numbers , N);
    Length := N - 1;
    IsCorrect := false;
    for i := 0 to Length do
        repeat
            try
                Readln(Numbers[i]);
            except
                Writeln('Incorrect input.You should use numbers [' , Low(Integer), '..' , High(Integer), ']');
            end;
        until IsCorrect;
        Read(Numbers[i]);
    Sum := Numbers[0];
    for i := 1 to Length do
        begin
            Sum := Sum + (i + 1) * Numbers[i];
        end;
    Writeln(Sum);
    Readln;
end.
