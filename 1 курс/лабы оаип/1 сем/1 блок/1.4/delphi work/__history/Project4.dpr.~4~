program Project4;

{$APPTYPE CONSOLE}

uses
  System.SysUtils;

var
    Numbers : array of Integer;
    Sum , N : Integer;
    i , Length : Byte;
    IsCorrect : Boolean;

begin
    IsCorrect := false;
    repeat
        try
            Readln(N);
            if (N > 0) and (N < 256) then
                IsCorrect := true
            else
                Writeln('You should use numbers [1..255]');
        except
            Writeln('Incorrect input.You should use numbers [1..255]');
        end;
    until IsCorrect;
    SetLength(Numbers , N);
    Length := N - 1;
    IsCorrect := false;
    for i := 0 to Length do
        repeat
            try
                Read(Numbers[i]);
                IsCorrect := true;
            except
                IsCorrect := false;
                Writeln('Incorrect input.You should use numbers [-2147483648..2147483647]');
            end;
        until IsCorrect;
    Sum := Numbers[0];
    for i := 1 to Length do
        begin
            Sum := Sum + (i + 1) * Numbers[i];
        end;
    Writeln(Sum);
end.
