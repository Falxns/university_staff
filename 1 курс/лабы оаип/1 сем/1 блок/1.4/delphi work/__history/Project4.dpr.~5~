program Project4;

{$APPTYPE CONSOLE}

uses
    System.SysUtils;

var
    Numbers : array of Integer;
    Sum , Num : Integer;
    i , Length : Byte;
    IsCorrect : Boolean;

begin
    Writeln('This program calculates the sum of all entered elements, with each term being an element multiplied by its serial number');
    Writeln('Enter the number of elements [1..255]');
    IsCorrect := false;
    repeat
        try
            Readln(Num);
            if (Num > 0) and (Num < 256) then
                IsCorrect := true
            else
                Writeln('You should use number [1..255]');
        except
            Writeln('Incorrect input. You should use number [1..255]');
        end;
    until IsCorrect;
    SetLength(Numbers , Num);
    Length := Num - 1;
    IsCorrect := false;
    for i := 0 to Length do
        repeat
            try
                Read(Numbers[i]);
                IsCorrect := true;
            except
                begin
                    IsCorrect := false;
                    Writeln('Incorrect input. You should use numbers [-2147483648..2147483647]');
                end;
            end;
        until IsCorrect;
    Sum := Numbers[0];
    for i := 1 to Length do
        begin
            Sum := Sum + (i + 1) * Numbers[i];
        end;
    Writeln('The sum of all entered elements: ',Sum);
    Readln;
end.
